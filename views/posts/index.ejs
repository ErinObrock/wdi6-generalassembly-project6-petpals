    <ul class="list-group">
      <li class="list-group-item"> 
        <h4 class="card-title">
        <%= post.pet.name %>
      </h4></li>
      <li class="list-group-item">
        Type: <%= post.pet.type %>
      </li>
      <li class="list-group-item">
        Age: <%= post.pet.age %>
      </li>

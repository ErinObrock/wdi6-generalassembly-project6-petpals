<div>
  <form action="/pets/<%= pets._id %>/post/<%= post._id %>/" method="post">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" placeholder="Title" name="title" >
    </div>
    <div class="form-group">
      <label>Text</label>
      <textarea class="form-control" type="text" rows="4" cols="20" placeholder="Enter the text for your post here." name="text"></textarea>
    </div>
    <div class="form-group">
      <label>URL of Picture</label>
      <input class="form-control" type="text" placeholder="URL" name="postPicture">
    </div>
    <div class="form-group">
      <button class="btn btn-default" type="submit">Update Post</button>
    </div>
  </form>
  <form method="POST" action="/pets/<%= pets._id %>/post/<%= post._id %>/?_method=DELETE">
    <button type="submit">Delete Post</button>
  </form>
  <div>
    <a class="btn btn-default" href="/users/<%= user._id %>/pets">Back</a>
  </div>
</div>

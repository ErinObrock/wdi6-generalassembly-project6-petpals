<div>
  <form action="/pets/<%= id %>/posts/<%= post._id %>/?_method=PUT" method="POST">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="title" value="<%= post.title %>">
    </div>
    <div class="form-group">
      <label>Text</label>
      <textarea class="form-control" type="text" rows="4" cols="20" name="text"><%= post.text %></textarea>
    </div>
    <div class="form-group">
      <label>URL of Picture</label>
      <input class="form-control" type="text" name="postPicture" value="<%= post.postPicture %>">
    </div>
    <div class="form-group">
      <button class="btn btn-default" type="submit">Update Post</button>
    </div>
  </form>
  <form method="POST" action="/pets/<%= id %>/posts/<%= post._id %>/?_method=DELETE">
    <button class="btn btn-default" type="submit" >Delete Post</button>
  </form>
</div>

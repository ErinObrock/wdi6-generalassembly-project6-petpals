
<% posts.forEach(function(post) { %>

<div class="media">
  <div class="media-left">
  <div class="card" style="min-width:175px">
      <img class="card-img-top img-thumbnail img-responsive center-block" src="<%= post.pet.profilePicture %>">
    <div class="card-block">
    <ul class="list-group">
      <li class="list-group-item"> 
        <h4 class="card-title">
        <a href="/pets/<%= post.pet.id %>"><%= post.pet.name %></a>
      </h4></li>
      <li class="list-group-item">
        Type: <%= post.pet.type %>
      </li>
      <li class="list-group-item">
        Age: <%= post.pet.age %>
      </li>
    </ul>
    </div>
  </div>
  </div>
  <div class="media-body">
    <h4 class="media-heading"> <%= post.title %> </h4>
    <img class="media-object img-responsive" style="max-width:75%, max-height:75%" src="<%= post.postPicture %>">
    <%= post.text %> 
    </div>
</div>


<% }) %>


<div class="media" style="max-width:1000px">
	<div class="media-left">
		<div class="card" style="min-width:200px; background:#ffff80">
			<img class="media-object card-img-top img-responsive center-block" src="<%= pet.profilePicture %>" style="max-width:70%,max-height:70%">
		<div class="card-block">
			<h4 class="card-title" style="text-align:center">
				<a href="/pets/<%= pet.id %>"><%= pet.name %></a>
			</h4>
		</div>
		
		</div>
	</div>
	<div class="media-body">
		<h4 class="media-head">
			About <%= pet.name %>
		</h4>
		<ul class="list-group">
			<li class="list-group-item">
				Type: <%= pet.type %> 
			</li>
			<li class="list-group-item">
				Breed: <%= pet.breed %> 
			</li>
			<li class="list-group-item">
				Gender: <%= pet.gender %> 
			</li>
			<li class="list-group-item">
				Age: <%= pet.age %> 
			</li>
			<li class="list-group-item"> Summary:  <%= pet.bio %> </li>
		</ul>
	</div>
	
</div>	





<% posts.forEach(function(post) { %>

<div class="media" style="border: 1px solid #ddd; padding: 8px; max-width:1000px; background:#99ddff">
  <div class="media-left">
  <div class="card" style="min-width:175px; background:background:#ffff80">
      <img class="card-img-top img-thumbnail img-responsive center-block" src="<%= post.pet.profilePicture %>">
    <div class="card-block">
    <ul class="list-group">
      <li class="list-group-item"> 
        <h4 class="card-title">
		<%= post.pet.name %>
      </h4></li>
      <li class="list-group-item">
        Type: <%= post.pet.type %>
      </li>
      <li class="list-group-item">
        Age: <%= post.pet.age %>
      </li>
     <li class="list-group-item">
      <a href="/<%= post._id %>/edit">
		<button class="btn btn-info">Edit Post</button></a>
      </li>
      <li class="list-group-item">
      <form method="POST" action="/pets/<%= pet._id %>/posts/<%= post._id %>/?_method=DELETE">
      <button class="btn btn-danger" type="submit" >Delete Post</button>
      </form>
      </li>
    </ul>
  </div>
  </div>
  </div>
  <div class="media-body" style="max-height:650px">
    <h4 class="media-heading"> <%= post.title %> </h4>
    <p class="text-muted" style="padding:5px"> Posted by <%= post.pet.name %> at <%= post.createdAt %> </p>
    <img class="media-object img-responsive" style="max-width:70%; max-height:70%" src="<%= post.postPicture %>">
    <div style="padding:5px">
    <%= post.text %> 
  </div>
  </div>
</div>
 	

 <% }) %>






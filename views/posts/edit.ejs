<div>
  <form action="/pets/<%= pets._id %>/post/<%= post._id %>/" method="post">
    <div>
      <label>Title</label>
      <input type="text" placeholder="Title" name="title" >
    </div>
    <div>
      <label>Text</label>
      <textarea type="text" placeholder="Enter the text for your post here." name="text"></textarea>
    </div>
    <div>
      <label>URL of Picture</label>
      <input type="text" placeholder="URL" name="postPicture">
    </div>
    <div>
      <button type="submit">Update Post</button>
    </div>
  </form>
  <form method="POST" action="/pets/<%= pets._id %>/post/<%= post._id %>/?_method=DELETE">
    <button type="submit">Delete Post</button>
  </form>
  <div>
    <a href="/users/<%= user._id %>/pets">Back</a>
  </div>
</div>

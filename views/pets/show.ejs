
<div class="media">
	<div class="media-left">
		<div class="card" style="min-width:200px">
			<img class="media-object card-img-top img-responsive center-block" src="<%= pet.profilePicture %>" style="max-width:70%,max-height:70%">
		<div class="card-block">
			<h4 class="card-title">
				<a href="/pets/<%= pet.id %>"><%= pet.name %></a>
			</h4>
		</div>

		</div>
	</div>
	<div class="media-body">
		<h4 class="media-head">
			About <%= pet.name %>
		</h4>
		<ul class="list-group">
			<li class="list-group-item">
				Type: <%= pet.type %>
			</li>
			<li class="list-group-item">
				Breed: <%= pet.breed %>
			</li>
			<li class="list-group-item">
				Gender: <%= pet.gender %>
			</li>
			<li class="list-group-item">
				Age: <%= pet.age %>
			</li>
			<li class="list-group-item"> Summary:  <%= pet.bio %> </li>
		</ul>
	</div>

</div>





<% posts.forEach(function(post) { %>

<div class="media">
	<div class="media-left">
	<div class="card" style="min-width:175px">
			<img class="card-img-top img-thumbnail img-responsive center-block" src="<%= pet.profilePicture %>">
		<div class="card-block">
		<ul class="list-group">
			<li class="list-group-item">
				<h4 class="card-title">
				<a href="/pets/<%= pet.id %>"><%= pet.name %></a>
			</h4></li>
			<li class="list-group-item">
				Type: <%= pet.type %>
			</li>
			<li class="list-group-item">
				Age: <%= pet.age %>
			</li>
		</ul>
		</div>
	</div>
	</div>
	<div class="media-body">
		<h4 class="media-heading"> <%= post.title %> </h4>
		<img class="media-object img-responsive" style="max-width:75%, max-height:75%" src="<%= post.postPicture %>">
		<%= post.text %>
    </div>
</div>
<form method="POST" action="/pets/<%= post._id %>/posts/<%= post._id %>/?_method=DELETE">
    <button class="btn btn-default" type="submit" >Delete Post</button>
  </form>

 <% }) %>





